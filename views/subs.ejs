<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
<!--    <link-->
<!--      rel="stylesheet"-->
<!--      href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.classless.min.css"-->
<!--    />-->
    <link href="/css/style.css" rel="stylesheet" />
    <title>Subs</title>
  </head>

  <body>
    <div class="header">
      <a class="logoBtn" role="button" href="/">Not Reddit</a>
      <div class="navbar">
        <a role="button" href="/">Home</a>
        <a role="button" href="/subs/list">Subs</a>
        <% if (!user) { %>
          <a role="button" href="/auth/login">Login</a>
        <% } else { %>
          <a role="button" href="/auth/logout">Logout</a>
        <% } %>
        <a role="button" href="/auth/signUp">Sign Up</a>
      </div>
    </div>

    <main>
      <div class="subgroups-list">
        <p class="title">Subgroups</p>
        <% if (user) { %>
          <a style="margin-left: auto" role="button" href="/posts/create">Create Post</a>
        <% } %>
      </div>
      <section>
        <% subgroups.forEach(subgroup => { %>
          <article class="postListing">
            <p class="post__title" style="font-weight: bold"><a href="/subs/show/<%= subgroup.name %>"><%= subgroup.name %></a></p>
            <p class="post__desc"><%= subgroup.description %></p>
          </article>
        <% }); %>
      </section>

    </main>
  </body>
</html>
