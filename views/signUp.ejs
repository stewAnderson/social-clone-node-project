<!--    />-->
    <link href="/css/style.css" rel="stylesheet" />
    <title>Sign Up</title>
  </head>

  <body>
    <div class="header">
      <a class="logoBtn" role="button" href="/">Not Reddit</a>
      <div class="navbar">
        <a role="button" href="/">Home</a>
        <a role="button" href="/subs/list">Subs</a>
        <% if (!user) { %>
          <a role="button" href="/auth/login">Login</a>
        <% } else { %>
          <a role="button" href="/auth/logout">Logout</a>
        <% } %>
        <a role="button" href="">Sign Up</a>
      </div>
    </div>

    <main>
      <div style="display: flex; justify-content: space-around">
        <article class="signUpBox">
          <h1>Sign Up</h1>
          <form action="/auth/signUp" method="POST">
            <input type="text" name="uname" id="uname" placeholder="Username" required/>
            <% if (typeof unameErrorMsg !== "undefined") { %>
              <p class="unameError"><%= unameErrorMsg %></p>
            <% } %>
            <input type="password" name="password" id="password" placeholder="Password" required/>
            <button type="submit">Sign Up</button>
          </form>
        </article>
      </div>
    </main>
  </body>
</html>
